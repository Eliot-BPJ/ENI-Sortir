{% extends 'base.html.twig' %}

{% block title %}Admin - Nouveau utilisateur{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <div class="card mb-3" style="width: 80% ; padding: 8px;">
        <div class="row g-0">
            <h1 class="text-center mb-4">Nouvel utilisateur</h1>
            <div class="card-body">
                {{ form_errors(registrationForm) }}
                {{ form_start(registrationForm, {'attr': {'class': 'row g-3 needs-validation was-validated',
                    'novalidate': ''}}) }}

                <div class="row my-3">
                    {{ form_label(registrationForm.pseudo, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'form-control', 'aria-describedby': 'inputGroupPrepend', 'required': ''}}) }}
                </div>

                <div class="row my-3">
                    {{ form_label(registrationForm.prenom, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'aria-describedby': 'inputGroupPrepend', 'required': ''}}) }}
                </div>

                <div class="row my-3">
                    {{ form_label(registrationForm.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'aria-describedby': 'inputGroupPrepend', 'required': ''}}) }}
                </div>

                <div class="row mb-3">
                    {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'aria-describedby': 'inputGroupPrepend', 'required': ''}}) }}
                </div>

                <div class="row mb-3">
                    {{ form_label(registrationForm.telephone, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control', 'aria-describedby': 'inputGroupPrepend', 'required': ''}}) }}
                </div>

                <div class="row mb-3">
                    {{ form_label(registrationForm.idSite, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.idSite, {'attr': {'class': 'form-select', 'aria-describedby': 'inputGroupPrepend', 'required': ''}}) }}
                </div>

                <div class="col-sm" style="text-align: center">
                    <button class="btn btn-outline-success" type="submit">Enregistrer</button>
                    <a href="{{ path('app_admin_utilisateur_lister') }}" class="btn btn-outline-secondary">Annuler</a>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
