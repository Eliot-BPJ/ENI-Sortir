<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>Sortir.com - {% block title %}{% endblock %}</title>
        <link rel="icon" href="{{ asset('assets/logo.png') }}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <style>

        </style>
    </head>

    <body>
        <header>
            <nav class="navbar-expand-lg nav-links">
                <div>
                    <img class="logo" src="{{ asset('assets/logo.jpg') }}" alt="Logo" />
                </div>
                <a href="{{ path('app_accueil') }}">Accueil</a>

                {% if is_granted('ROLE_USER') %}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Administration
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('app_ville_liste') }}">Villes</a></li>
                        <li><a class="dropdown-item" href="#">Lieux</a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                        <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ path('app_site_liste') }}">Sites</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_admin_utilisateur_lister') }}">Utilisateurs</a></li>
                        {% endif %}
                    </ul>
                </li>
                {% endif %}

                {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('app_utilisateur_modifier') }}">Mon profil</a>
                    <a href="{{ path('app_logout') }}">Se déconnecter</a>
                {% endif %}
            </nav>
        </header>

        <main>
            {% block body %}{% endblock %}
        </main>

        <footer class="footer">
            <div>
                <ul class="pied-page">
                    <li><a target=”_blank” class="text-info" href="https://www.eni-ecole.fr/">ENI Ecole Informatique</a></li>
                    <li><a target=”_blank” class="text-info" href="https://github.com/Eliot-BPJ/ENI-Sortir">Code source sous license</a></li>
                    <li>Informations légales - Sortir.com by ENI-Ecole</li>
                </ul>
            </div>
        </footer>

</body>
</html>
