{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="mb-4">Reinitialiser votre mot de passe</h1>

    {{ form_start(requestForm) }}
        <div class="">
            <span>{{ form_label(requestForm.email) }}</span>
            {{ form_row(requestForm.email, {'label': false, 'attr': {'class': 'form-control w-25'}}) }}
        </div>
        <div>
            <small>
                Entrez votre adresse email et nous vous enverrons un
                lien pour r√©initialiser votre mot de passe.
            </small>
        </div>

        <button type="submit" class="btn btn-outline-primary mt-4" >Envoie de l'email</button>
    {{ form_end(requestForm) }}
{% endblock %}
