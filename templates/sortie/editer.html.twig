{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div>
    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Cr√©er une sortie</p>
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-12">
                <div class="text-black" style="border-radius: 25px;">
                    {{ form_start(form, {'attr': {'class': "mx-1 mx-md-4"}}) }}
                    <div class="row justify-content-center">
                        <div class="col-6">
                            {{ form_errors(form) }}
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_row(form.nom, {'attr': {'class': "form-control"}}) }}
                                    {{ form_errors(form.nom) }}
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_row(form.dateDebut, {'attr': {'class': "form-control"}}) }}
                                    {{ form_errors(form.dateDebut) }}
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_row(form.dateLimiteInscription, {'attr': {'class': "form-control"}}) }}
                                    {{ form_errors(form.dateLimiteInscription) }}
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_row(form.nbInscriptionMax, {'attr': {'class': "form-control"}}) }}
                                    {{ form_errors(form.nbInscriptionMax) }}
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_row(form.dateRetour, {'attr': {'class': "form-control"}}) }}
                                    {{ form_errors(form.dateRetour) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_row(form.infosSortie, {'attr': {'class': "form-control"}}) }}
                                    {{ form_errors(form.infosSortie) }}
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_row(form.ville, {'attr': {'class': "form-control"}}) }}
                                    {{ form_errors(form.ville) }}
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    {{ form_row(form.lieux, {'attr': {'class': "form-control"}}) }}
                                    {{ form_errors(form.lieux) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <button type="submit" class="btn btn-outline-primary btn-lg">Enregistrer</button>
                        </div>
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <button type="submit" class="btn btn-outline-warning btn-lg">Publier la sortie</button>
                        </div>
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                            <button type="submit"  class="btn btn-outline-info btn-lg">Annuler</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
